{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "settings": {
        "react": {
            "pragma": "React",
             "version": "detect"
        }
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            { "allow": ["warn","error"]}
        ]
    },
    "globals": {
      "__dirname": true,
      "require": true,
      "exports": true,
      "process": true,
      "module": true
    },
    "plugins": [
        "react"
    ]
}
